{
  "name": "manim-web",
  "version": "0.3.0",
  "description": "Manim-like mathematical animation library for the web",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/integrations/react.d.ts",
      "import": "./dist/integrations/react.js",
      "default": "./dist/integrations/react.js"
    },
    "./vue": {
      "types": "./dist/integrations/vue.d.ts",
      "import": "./dist/integrations/vue.js",
      "default": "./dist/integrations/vue.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "docs": "node scripts/generate-example-docs.mjs && cd docs && npm run build",
    "docs:dev": "node scripts/generate-example-docs.mjs && cd docs && npm start",
    "docs:examples": "node scripts/generate-example-docs.mjs",
    "cpd": "jscpd src/",
    "test:integration": "npx playwright test",
    "format:check": "prettier --check src/",
    "knip": "knip",
    "release": "standard-version",
    "release:minor": "standard-version --release-as minor",
    "release:major": "standard-version --release-as major",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "dependencies": {
    "earcut": "^3.0.2",
    "gif.js": "^0.2.0",
    "katex": "^0.16.28",
    "opentype.js": "^1.3.4",
    "polygon-clipping": "^0.15.7",
    "three": "^0.182.0"
  },
  "devDependencies": {
    "@eslint/js": "^10.0.1",
    "@playwright/test": "^1.58.2",
    "@types/earcut": "^3.0.0",
    "@types/katex": "^0.16.8",
    "@types/react": "^19.2.13",
    "@types/three": "^0.182.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "happy-dom": "^20.6.1",
    "husky": "^9.1.7",
    "jscpd": "^4.0.8",
    "knip": "^5.83.1",
    "lint-staged": "^16.2.7",
    "prettier": "^3.8.1",
    "standard-version": "^9.5.0",
    "typedoc": "^0.28.16",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.18",
    "vue": "^3.0.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "vue": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    },
    "vue": {
      "optional": true
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/maloyan/manim-js.git"
  },
  "homepage": "https://maloyan.github.io/manim-js/",
  "bugs": {
    "url": "https://github.com/maloyan/manim-js/issues"
  },
  "keywords": [
    "animation",
    "math",
    "visualization",
    "manim",
    "threejs",
    "webgl",
    "3blue1brown",
    "mathematical-animations",
    "typescript"
  ],
  "license": "MIT"
}
